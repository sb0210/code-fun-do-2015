<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/articles">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Article source"
            android:textStyle="bold"
            android:id="@+id/textViewArticleSource"
            android:layout_weight="0.06"
            android:textColor="#FFFFFF"
            android:background="#FF33B5E5"/>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/articlesum"
        android:layout_below="@id/articles">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Article summary"
            android:id="@+id/textViewArticleSummary"
            android:layout_weight="0.05"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/textViewArticleSource"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/material_grey_900"/>

    </android.support.v7.widget.CardView>


</RelativeLayout>